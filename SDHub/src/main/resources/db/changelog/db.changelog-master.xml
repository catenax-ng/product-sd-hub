<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="202206061010" author="Daniil Pankratov">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="verifiable_credential"/>
        </preConditions>
        <createTable tableName="verifiable_credential">
            <column name="id" type="uuid" defaultValue="uuid_generate_v4()">
                <constraints primaryKey="true" primaryKeyName="vc_id_pk"/>
            </column>

            <column name="vc" type="jsonb"/>
        </createTable>
    </changeSet>

</databaseChangeLog>